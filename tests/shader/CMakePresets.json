{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "macos-testing",
      "binaryDir": "${sourceDir}/../../build_shader_macos",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "generator": "Xcode",
      "warnings": {"dev": true, "deprecated": true},
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "universal-osx-obs"
      }
    },
    {
      "name": "windows-testing-x64",
      "binaryDir": "${sourceDir}/../../build_shader_x64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Visual Studio 17 2022",
      "architecture": "x64,version=10.0.22621",
      "warnings": {"dev": true, "deprecated": true},
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
      }
    },
    {
      "name": "ubuntu-testing-x86_64",
      "binaryDir": "${sourceDir}/../../build_shader_x86_64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Ninja",
      "warnings": {"dev": true, "deprecated": true},
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "macos-testing",
      "configurePreset": "macos-testing",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-testing-x64",
      "configurePreset": "windows-testing-x64",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "ubuntu-testing-x86_64",
      "configurePreset": "ubuntu-testing-x86_64",
      "configuration": "RelWithDebInfo"
    }
  ],
  "testPresets": [
    {
      "name": "macos-testing",
      "configurePreset": "macos-testing",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-testing-x64",
      "configurePreset": "windows-testing-x64",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "ubuntu-testing-x86_64",
      "configurePreset": "ubuntu-testing-x86_64",
      "configuration": "RelWithDebInfo"
    }
  ]
}
